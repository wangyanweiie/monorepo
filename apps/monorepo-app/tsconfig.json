{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "ignoreDeprecations": "5.0",
        "baseUrl": ".",
        "types": ["vite/client", "element-plus/global", "unplugin-icons/types/vue", "node"],
        "paths": {
            "@/*": ["src/*"]
        },
        "importsNotUsedAsValues": "remove"
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "scripts"],
    "exclude": ["dist", "node_modules", "src/api"],
    "references": [
        {
            "path": "./tsconfig.vite-config.json"
        }
    ]
}
